{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/build/$1",
            "headers": {
                "cache-control": "s-maxage=1, stale-while-revalidate"
            }
        }
    ]
}